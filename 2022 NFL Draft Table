/*
1st 2 rounds of the NFL 2022 Draft
*/

CREATE TABLE picks(
	id INTEGER PRIMARY KEY,
	pick_number INTEGER,
	name TEXT,
	college TEXT,
	picked_by TEXT,
	position TEXT);

